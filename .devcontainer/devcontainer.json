{
  "name": "Node + Python + Postgres Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "postCreateCommand": "pnpm install",
  "features": {},
  "forwardPorts": [5432],
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/var/lib/postgresql/data,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
